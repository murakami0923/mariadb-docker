[client]
default-character-set = utf8mb4

[mysql]
default-character-set = utf8mb4

[mysqld]
# 文字コード・照合順序（日本語含む多言語向けに utf8mb4 / unicode_ci を採用）
character-set-server = utf8mb4
collation-server      = utf8mb4_unicode_ci

# クライアント側の指定に影響されず utf8mb4 を強制
character-set-client-handshake = FALSE

# 推奨: 確実に接続時の文字コードを utf8mb4 に
init_connect = 'SET NAMES utf8mb4'

# ログや基本設定（任意）
skip-host-cache
skip-name-resolve
max_connections = 200
